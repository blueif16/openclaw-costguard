{
  "name": "costguard",
  "version": "0.1.0",
  "description": "Cost tracking, budget enforcement, and usage attribution for OpenClaw agents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "openclaw",
    "openclaw-extension",
    "cost-tracking",
    "budget",
    "tokens",
    "observability"
  ],
  "openclaw": {
    "extensions": ["./src/index.ts"],
    "configSchema": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "dailyLimitUsd": { "type": "number" },
        "monthlyLimitUsd": { "type": "number" },
        "warnThreshold": { "type": "number", "default": 0.8 },
        "budgetAction": { "type": "string", "enum": ["warn", "block"] }
      }
    }
  },
  "files": [
    "dist/",
    "openclaw.plugin.json",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "typescript": "^5.5.0"
  }
}
